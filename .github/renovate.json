{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "groupName": "all-patch-and-minor"
    },
    {
      "matchPackagePatterns": ["^org\\.jetbrains\\.kotlin:"],
      "groupName": "kotlin-libs",
      "rangeStrategy": "bump"
    },
    {
      "matchPackagePatterns": ["spring-boot-dependencies"],
      "groupName": "spring-boot-bom"
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "major-upgrades"
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm-dependencies",
      "matchFileNames": ["package.json"]
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "docker-images",
      "matchFileNames": ["Dockerfile"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "matchFileNames": [".github/workflows/*.yml"]
    },
    {
      "matchManagers": ["helm"],
      "groupName": "helm-charts",
      "matchFileNames": ["Chart.yaml"]
    }
  ],
  "enabledManagers": ["gradle", "maven", "npm", "dockerfile", "github-actions", "helm"],
  "gradle": {
    "fileMatch": ["(^|/)build\\.gradle(.kts)?$"]
  },
  "maven": {
    "fileMatch": ["(^|/)pom\\.xml$"]
  },
  "npm": {
    "fileMatch": ["(^|/)package\\.json$", "(^|/)package-lock\\.json$"]
  },
  "dockerfile": {
    "fileMatch": ["(^|/)Dockerfile$"]
  }
}
