{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "groupName": "all-patch-and-minor"
    },
    {
      "matchPackagePatterns": ["^org\\.jetbrains\\.kotlin:"],
      "groupName": "kotlin-libs",
      "rangeStrategy": "bump"
    },
    {
      "matchPackagePatterns": ["spring-boot-dependencies"],
      "groupName": "spring-boot-bom"
    },
    {
      "matchUpdateTypes": ["major"],
      "schedule": ["first day of month"],
      "groupName": "major-upgrades"
    }
  ],
  "gradle": {
    "enabled": true,
    "fileMatch": ["(^|/)build\\.gradle(.kts)?$"]
  },
  "maven": {
    "enabled": true,
    "fileMatch": ["(^|/)pom\\.xml$"]
  },
  "npm": {
    "enabled": true,
    "fileMatch": ["(^|/)package\\.json$", "(^|/)package-lock\\.json$"],
    "groupName": "npm-dependencies"
  },
  "docker": {
    "enabled": true,
    "fileMatch": ["(^|/)Dockerfile$"],
    "groupName": "docker-images"
  },
  "githubActions": {
    "enabled": true,
    "fileMatch": ["(^|/)\\.github/workflows/.*\\.yml$"],
    "groupName": "github-actions"
  },
  "helm": {
    "enabled": true,
    "fileMatch": ["(^|/)Chart\\.yaml$"],
    "groupName": "helm-charts"
  }
}
